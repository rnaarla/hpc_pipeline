{
  "train_batch_size": 8192,
  "gradient_accumulation_steps": 16,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 0.00015,
      "betas": [0.9, 0.95],
      "eps": 1e-8
    }
  },
  "zero_optimization": {
    "stage": 3,
    "offload_optimizer": {
      "device": "nvme",
      "nvme_path": "/local_nvme"
    },
    "offload_param": { "device": "cpu" }
  },
  "fp16": { "enabled": true },
  "wall_clock_breakdown": true,
  "checkpoint": {
    "enabled": true,
    "interval": 1000
  },
    "logging": {
      "enabled": true,
      "level": "info"
    }
  }